<section class="vh-80">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="/materials/loginCat.png"
                     class="img-fluid" alt="(=^･ω･^=)" style="scale: 200%">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <h1 class="fw-bolder mb-3">Register</h1>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <form id="registerForm" asp-action="Register">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" name="username" class="form-control form-control-lg" placeholder="Username"/>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" name="fullName" class="form-control form-control-lg" placeholder="Full Name"/>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="password" name="password" class="form-control form-control-lg" placeholder="Password"/>
                    </div>

                    <button id="submitBtn" type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Register</button>

                    <div class="text-center mt-4">
                        <p>Already have an account? <a asp-controller="User" asp-action="Login">Sign in</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
  document.getElementById("registerForm").addEventListener("submit", function(ev) {
    document.getElementById("submitBtn").innerHTML = 
        `    <div class="spinner-grow" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    `
  });
</script>